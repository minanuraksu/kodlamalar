gorevler = []

while True:
    print("\n1-Görev ekle")
    print("2-Görevleri göster")
    print("3-Çıkış")

    secim = input("Seçim: ")

    if secim == "1":
        gorev = input("Görev: ")
        gorevler.append(gorev)

    elif secim == "2":
        for i, g in enumerate(gorevler, 1):
            print(i, "-", g)

    elif secim == "3":
        break
